FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      p_rgh;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -1 -2 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    "(outlet|inlet)"
    {
        type            fixedFluxPressure;
        value           uniform 0;
    }

    atmosphere
    {
        type            totalPressure;
        p0              uniform 0;
    }
    
    "(floater|BB1|BB2|BB3|BB4|BB5|BB6|BB7|BB8|BB9|stationaryWalls)"
    {
        type            fixedFluxPressure;
    }
    
    "(front|back)"
    {
        type            fixedFluxPressure;//cyclicAMI;
    }
}

