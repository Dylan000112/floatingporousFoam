        start        ( -0.75 0.001 0.2 ); 
        end          ( -0.75 0.001 0.6 );
        npoints      50;
    }

    Gauge2
    {
        type         midPointAndFace;
        axis         z;
        start        ( 0.5 0.001 0.2 ); 
        end          ( 0.5 0.001 0.6 );
        npoints      50;
    }

    Gauge3
    {
        type         midPointAndFace;
        axis         z;
        start        ( 0.75 0.001 0.2 ); 
        end          ( 0.75 0.001 0.6 );
        npoints      50;
    }
 

    

);


