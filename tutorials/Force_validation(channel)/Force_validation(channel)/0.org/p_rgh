FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      p_rgh;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -1 -2 0 0 0 0];

internalField   uniform 0;

boundaryField
{

    outlet 
    {
        type            fixedValue;
        value           uniform 0; 
    }

     inlet 
    {
        type            fixedFluxPressure;
        value           uniform 0;
    }

    stationaryWalls
    {
        type            fixedFluxPressure;
        value           uniform 0;
    }

     atmosphere
    {
        type            fixedFluxPressure; // 或者 patch/inletOutlet
        value           uniform 0;
    }
    
   floatingObject
    {
        type            fixedFluxPressure;
        value           uniform 0;
    }

    frontAndback
    {
        type            empty;
    }
}

// ************************************************************************* //
