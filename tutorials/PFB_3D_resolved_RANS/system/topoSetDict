    }
    {
        name    B2; // 这个给 createPatch 用
        type    faceSet;
        action  new;
        source  faceToFace;
        set     b2;
    }
    {
        name    B2;
        type    faceSet;
        action  subset;      // 关键：取交集
        source  patchToFace;
        patch   floater;       // 这里写那个混在一起的大Patch名字，如果是所有边界可用 ".*"
    }

// End
    {
        name    b3;
        type    faceSet;
        action  new;
        source  boxToFace;
        box     (0.3675  0.2125  0.45) (0.4025  0.2475  0.75);
    }
    {
        name    B3; // 这个给 createPatch 用
        type    faceSet;
        action  new;
        source  faceToFace;
        set     b3;
    }
    {
        name    B3;
        type    faceSet;
        action  subset;      // 关键：取交集
        source  patchToFace;
        patch   floater;       // 这里写那个混在一起的大Patch名字，如果是所有边界可用 ".*"
