FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      waveGauges;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

waveGauges
{
    type            interfaceHeight;
    libs            ("libfieldFunctionObjects.so");

    alpha           alpha.water;

    interpolationScheme cellPoint;

    locations
    (
        ( -0.8 0.0 0.0 ) // Gauge0
        ( -1.2 0.0 0.0 ) // Gauge1
        ( -1.5 0.0 0.0 ) // Gauge2
        (  0.8 0.0 0.0 ) // Gauge3
        (  1.2 0.0 0.0 ) // Gauge4
        (  1.5 0.0 0.0 ) // Gauge5
        ( -1.2 1.0 0.0 ) // Gauge0
        ( -1.2 2.0 0.0 ) // Gauge1
        ( -1.2 3.0 0.0 ) // Gauge2
        (  1.2 1.0 0.0 ) // Gauge3
        (  1.2 2.0 0.0 ) // Gauge4
        (  1.2 3.0 0.0 ) // Gauge5
        ( -1.2 -1.0 0.0 ) // Gauge0
        ( -1.2 -2.0 0.0 ) // Gauge1
        ( -1.2 -3.0 0.0 ) // Gauge2
        (  1.2 -1.0 0.0 ) // Gauge3
        (  1.2 -2.0 0.0 ) // Gauge4
        (  1.2 -3.0 0.0 ) // Gauge5
    );

    writeControl    adjustableRunTime;
    writeInterval   0.01;
    
    writePrecision  8;
}

